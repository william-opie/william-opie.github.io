# Required: path inside the container where the repo is mounted
BLOG_REPO_ROOT=/repo

# Optional: default post author front matter
DEFAULT_AUTHOR=Will

# Optional: enable/disable auto-commit
GIT_ENABLED=true

# Required for auto-commit when GIT_ENABLED=true
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=you@example.com

# Optional: CMS server port inside container
PORT=3000
